{% comment %}
  SCROLL AREA
  -----------
  Shopify Liquid version of Radix ScrollArea.
  Creates a stylized scrollable container with custom scrollbars.

  Usage Example:
  {% render 'scroll-area', content: '<p>Lots of scrollable text...</p>' %}
{% endcomment %}

{% assign content = content | default: "<p>Scrollable content here</p>" %}
{% assign area_id = id | default: "scroll-area-" | append: section.id %}

<style>
  .scroll-area {
    position: relative;
    width: 100%;
    height: 300px;
    overflow: auto;
    border-radius: 8px;
  }

  .scroll-area::-webkit-scrollbar {
    width: 10px;
    height: 10px;
  }

  .scroll-area::-webkit-scrollbar-track {
    background: transparent;
  }

  .scroll-area::-webkit-scrollbar-thumb {
    background-color: rgba(0, 0, 0, 0.2);
    border-radius: 10px;
    border: 2px solid transparent;
    background-clip: content-box;
    transition: background-color 0.2s ease;
  }

  .scroll-area::-webkit-scrollbar-thumb:hover {
    background-color: rgba(0, 0, 0, 0.4);
  }

  .scroll-area-content {
    padding-right: 12px;
    padding-bottom: 12px;
  }

  .scroll-area:focus-visible {
    outline: 3px solid rgba(17, 17, 17, 0.3);
    outline-offset: 1px;
  }
</style>

<div
  id="{{ area_id }}"
  class="scroll-area"
  tabindex="0"
  role="region"
  aria-label="Scrollable content"
>
  <div class="scroll-area-content">
    {{ content }}
  </div>
</div>
