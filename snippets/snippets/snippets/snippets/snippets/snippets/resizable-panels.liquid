{% comment %}
  RESIZABLE PANELS
  ----------------
  Shopify Liquid implementation of Resizable Panels (React â†’ HTML/JS equivalent).
  This version mimics draggable split panels for dashboards, editors, or layout tools.

  Usage Example:
  {% render 'resizable-panels',
    left_content: '<p>Sidebar content</p>',
    right_content: '<p>Main content</p>'
  %}
{% endcomment %}

{% assign left_content = left_content | default: "<p>Left Panel</p>" %}
{% assign right_content = right_content | default: "<p>Right Panel</p>" %}
{% assign handle_id = id | default: "resizable-panels-" | append: section.id %}

<style>
  .resizable-panel-group {
    display: flex;
    width: 100%;
    height: 100%;
    overflow: hidden;
  }

  .resizable-panel {
    flex-grow: 1;
    min-width: 100px;
    overflow: auto;
    transition: flex-basis 0.2s ease;
  }

  .resizable-handle {
    position: relative;
    width: 5px;
    background-color: rgba(0, 0, 0, 0.1);
    cursor: col-resize;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .resizable-handle:hover {
    background-color: rgba(0, 0, 0, 0.2);
  }

  .resizable-handle svg {
    width: 10px;
    height: 10px;
    opacity: 0.6;
  }
</style>

<div class="resizable-panel-group" id="{{ handle_id }}">
  <div class="resizable-panel left-panel">
    {{ left_content }}
  </div>

  <div class="resizable-handle" role="separator" aria-orientation="vertical">
    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M9 18v-6v-6M15 18v-6v-6" />
    </svg>
  </div>

  <div class="resizable-panel right-panel">
    {{ right_content }}
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const container = document.getElementById('{{ handle_id }}');
    const left = container.querySelector(".left-panel");
    const handle = container.querySelector(".resizable-handle");
    let isResizing = false;

    handle.addEventListener("mousedown", (e) => {
      isResizing = true;
      document.body.style.userSelect = "none";
    });

    window.addEventListener("mousemove", (e) => {
      if (!isResizing) return;
      const containerRect = container.getBoundingClientRect();
      const offsetX = e.clientX - containerRect.left;
      const percentage = (offsetX / containerRect.width) * 100;
      left.style.flexBasis = `${percentage}%`;
    });

    window.addEventListener("mouseup", () => {
      isResizing = false;
      document.body.style.userSelect = "";
    });
  });
</script>
