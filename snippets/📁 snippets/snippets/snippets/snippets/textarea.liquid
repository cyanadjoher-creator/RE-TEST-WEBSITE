{% comment %}
  TEXTAREA COMPONENT (Shopify Liquid version)
  -------------------------------------------
  Renders a styled, accessible textarea field with consistent UI.

  Usage:
  {% render 'textarea',
    name: 'message',
    placeholder: 'Enter your message here...',
    rows: 5,
    required: true
  %}
{% endcomment %}

{% assign id = id | default: name | default: 'textarea-' | append: section.id %}
{% assign class = class | default: '' %}
{% assign placeholder = placeholder | default: '' %}
{% assign value = value | default: '' %}
{% assign rows = rows | default: 4 %}

<style>
  .textarea {
    width: 100%;
    min-height: 4rem;
    padding: 0.5rem 0.75rem;
    font-size: 0.875rem;
    line-height: 1.5;
    border-radius: 0.375rem;
    border: 1px solid var(--color-border, rgba(0,0,0,0.15));
    background-color: var(--color-bg, #fff);
    color: var(--color-text, #111);
    transition: border-color 0.2s ease, box-shadow 0.2s ease;
    resize: none;
  }

  .textarea::placeholder {
    color: rgba(0,0,0,0.45);
  }

  .textarea:focus-visible {
    outline: none;
    border-color: var(--color-ring, hsl(220,90%,60%));
    box-shadow: 0 0 0 3px hsl(220,90%,70%,0.4);
  }

  .textarea[aria-invalid="true"] {
    border-color: hsl(0,70%,50%);
    box-shadow: 0 0 0 3px hsla(0,70%,50%,0.25);
  }

  .textarea:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  @media (prefers-color-scheme: dark) {
    .textarea {
      background-color: rgba(255,255,255,0.08);
      border-color: rgba(255,255,255,0.2);
      color: rgba(255,255,255,0.9);
    }
    .textarea::placeholder {
      color: rgba(255,255,255,0.5);
    }
  }
</style>

<textarea
  id="{{ id }}"
  name="{{ name }}"
  placeholder="{{ placeholder }}"
  class="textarea {{ class }}"
  rows="{{ rows }}"
  {% if required %}required{% endif %}
  {% if disabled %}disabled{% endif %}
  {% if invalid %}aria-invalid="true"{% endif %}
  data-slot="textarea"
>{{ value }}</textarea>
