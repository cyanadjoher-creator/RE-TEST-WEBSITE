import * as React from "react";

interface VideoPlaceholderProps extends React.HTMLAttributes<HTMLDivElement> {
  className?: string;
  label?: string;
}

export function VideoPlaceholder({
  className = "",
  label = "VIDEO",
  style,
  ...props
}: VideoPlaceholderProps) {
  return (
    <div
      className={`relative flex items-center justify-center bg-black ${className}`}
      style={{ backgroundColor: "#000000", ...style }}
      role="img"
      aria-label={label}
      {...props}
    >
      <div
        className="uppercase text-white text-center pointer-events-none"
        style={{
          fontSize: "14px",
          letterSpacing: "0.15em",
          fontWeight: 300,
          opacity: 0.6,
          lineHeight: 1.4,
        }}
      >
        <div className="text-[20px] leading-none mb-1">â–¶</div>
        <div>{label}</div>
      </div>
    </div>
  );
}
