{% assign p = product %}

<a
  href="{{ p.url }}"
  class="group cursor-pointer block"
>
  <div class="relative overflow-hidden mb-3 border-2 border-transparent group-hover:border-white group-hover:shadow-[0_0_0_2px_#000] transition-all duration-300">
    {% if p.featured_image %}
      {{ p.featured_image | image_url: width: 1200 | image_tag: class: 'w-full h-full object-cover', loading: 'lazy' }}
    {% else %}
      <div class="w-full bg-black flex items-center justify-center" style="aspect-ratio:3/4;">
        <span class="uppercase text-white/60 text-[12px] tracking-widest font-light">IMAGE</span>
      </div>
    {% endif %}
  </div>

  <div class="flex justify-between items-start">
    <div class="uppercase group-hover:opacity-60 transition-opacity" style="font-size:12px;letter-spacing:0.05em;font-weight:400">
      {{ p.title | escape }}
    </div>
    <div style="font-size:12px;letter-spacing:0.02em;font-weight:400">
      {{ p.price | money }}
    </div>
  </div>
</a>
