{% comment %}
  TOGGLE GROUP COMPONENT (Shopify Liquid version)
  -----------------------------------------------
  Mimics Radix ToggleGroup behavior with accessible HTML + JS.

  Usage:
  {% render 'toggle-group',
    name: 'alignment',
    options: 'Left,Center,Right',
    default: 'Center',
    variant: 'outline',
    size: 'default'
  %}
{% endcomment %}

{% assign name = name | default: 'toggle-group' %}
{% assign options = options | split: ',' %}
{% assign default = default | default: options.first %}
{% assign variant = variant | default: 'default' %}
{% assign size = size | default: 'default' %}
{% assign class = class | default: '' %}

<style>
  .toggle-group {
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 0.375rem;
    overflow: hidden;
    width: fit-content;
  }

  .toggle-group[data-variant="outline"] {
    box-shadow: 0 0 0 1px rgba(0,0,0,0.1);
  }

  .toggle-item {
    flex: 1 0 auto;
    border: 1px solid transparent;
    border-left: none;
    padding: 0.4rem 0.75rem;
    font-size: 0.875rem;
    font-weight: 500;
    text-align: center;
    cursor: pointer;
    transition: all 0.2s ease;
    background-color: var(--toggle-bg, #fff);
    color: var(--toggle-fg, #111);
    user-select: none;
  }

  .toggle-group[data-variant="outline"] .toggle-item {
    border-color: rgba(0,0,0,0.1);
  }

  .toggle-item:first-child {
    border-top-left-radius: 0.375rem;
    border-bottom-left-radius: 0.375rem;
    border-left: 1px solid rgba(0,0,0,0.1);
  }

  .toggle-item:last-child {
    border-top-right-radius: 0.375rem;
    border-bottom-right-radius: 0.375rem;
  }

  .toggle-item[data-state="on"] {
    background-color: var(--toggle-active-bg, #111);
    color: var(--toggle-active-fg, #fff);
    border-color: var(--toggle-active-border, #111);
  }

  .toggle-item:focus-visible {
    outline: none;
    box-shadow: 0 0 0 3px rgba(100,150,255,0.4);
    z-index: 10;
  }

  .toggle-item:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  @media (prefers-color-scheme: dark) {
    .toggle-group[data-variant="outline"] {
      box-shadow: 0 0 0 1px rgba(255,255,255,0.1);
    }
    .toggle-item {
      background-color: rgba(255,255,255,0.05);
      color: rgba(255,255,255,0.85);
      border-color: rgba(255,255,255,0.1);
    }
    .toggle-item[data-state="on"] {
      background-color: rgba(255,255,255,0.2);
      color: #fff;
      border-color: rgba(255,255,255,0.4);
    }
  }
</style>

<div
  class="toggle-group {{ class }}"
  data-slot="toggle-group"
  data-variant="{{ variant }}"
  data-size="{{ size }}"
  data-name="{{ name }}"
>
  {% for option in options %}
    {% assign label = option | strip %}
    <button
      type="button"
      class="toggle-item"
      data-slot="toggle-group-item"
      data-value="{{ label | downcase }}"
      data-state="{% if label == default %}on{% else %}off{% endif %}"
    >
      {{ label }}
    </button>
  {% endfor %}
</div>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    document.querySelectorAll('[data-slot="toggle-group"]').forEach((group) => {
      const buttons = group.querySelectorAll(".toggle-item");
      const singleSelect = !group.hasAttribute("data-multiple");

      buttons.forEach((button) => {
        button.addEventListener("click", () => {
          if (singleSelect) {
            buttons.forEach((b) => b.setAttribute("data-state", "off"));
            button.setAttribute("data-state", "on");
          } else {
            const current = button.getAttribute("data-state");
            button.setAttribute("data-state", current === "on" ? "off" : "on");
          }
        });
      });
    });
  });
</script>
